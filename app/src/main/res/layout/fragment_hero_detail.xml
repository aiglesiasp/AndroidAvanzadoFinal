<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.HeroDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/imageHeroDetail"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameHeroDetail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="NOMBRE HEROE"
                android:layout_weight="2"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="center"
                android:textAlignment="textStart"
                tools:ignore="RtlCompat" />

            <ImageButton
                android:id="@+id/buttonFavorite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_favorite"
                android:contentDescription="Boton de heroe favorito"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/descriptionHeroDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESCRIPCION HEROE"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Última Localización"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/locationsDateShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATE SHOW: "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/locationsLatitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LATITUD: "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/locationsLongitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LONGITUD: "
            android:textSize="12sp" />

    </LinearLayout>

</FrameLayout>